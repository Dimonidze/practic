@model ProjectTopas_v_1._2.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>
        <dt>Регистрация нового пользователя:</dt>
        <dd>
            [@Html.ActionLink("Регистрация пользователя", "Register", "Account") ]
        </dd>
       
    </dl>
</div>
