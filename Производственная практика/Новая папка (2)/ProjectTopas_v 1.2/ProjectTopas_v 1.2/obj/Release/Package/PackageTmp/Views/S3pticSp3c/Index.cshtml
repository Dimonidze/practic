@model IEnumerable<ProjectTopas_v_1._2.Models.SepticSpecification>

@{
    ViewBag.Title = "Подробная информация";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Страница изменений данных в таблице "Подробная информация"</h2>

<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SepticTank.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolleyRes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PipeDepth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SepticTank.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight) кг.
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VolleyRes) л
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PipeDepth) см
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
